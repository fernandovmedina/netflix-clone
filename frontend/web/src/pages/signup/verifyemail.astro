---
import FooterSign from "../../components/Footer_sign.astro";
import NavbarSign from "../../components/Navbar_sign.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Netflix">
    <main>
        <NavbarSign />

        <section class="flex items-center justify-center text-center">
            <div class="py-32 w-[35%]">
                <img src="/icons8-aprobacion-50.png" alt="aprobacion_image" class="mx-auto mb-4">
                <h6 class="text-sm">STEP <span class="font-bold">2</span> OF <span class="font-bold">4</span></h6>
                <h1 class="font-extrabold text-4xl mb-3">Excelent! Now Let's verify your email</h1>
                <h4 class="text-gray-600 text-lg">Click on the url we sent to <span class="font-bold" id="emailSpan"></span> to complete your verification.</h4>
                <h4 class="text-gray-600 text-lg">When you verify your email, you'll can upgrade the security of your account and get important notifications from Netflix.</h4>
                <div class="flex w-full mt-4">
                    <button id="href" class="bg-gray-300 hover:bg-gray-400 w-full rounded text-xl font-bold py-3">OMITIR</button>
                </div>
            </div>
        </section>

        <FooterSign />
    </main>

    <script>
        var email = new URLSearchParams(window.location.search).get("email");

        document.getElementById("emailSpan").innerHTML = email;

        // href="/signup"
        document.getElementById("href").addEventListener('click', () => {
            window.location.href = `/signup?email=${email}`;
        });
    </script>
</Layout>
